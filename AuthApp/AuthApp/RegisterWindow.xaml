<Window x:Class="AuthApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthApp"
        mc:Ignorable="d"
        Title="Регистрация" 
        Height="350" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#ffa500" Offset="0"/>
                <GradientStop Color="#ff0000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="White" 
                CornerRadius="10" 
                Width="300" 
                Height="280"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <StackPanel Margin="20" VerticalAlignment="Center">
                <TextBlock Text="Регистрация" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Логин:" Margin="5,0"/>
                <TextBox x:Name="UsernameTextBox" 
                         Margin="5,0,5,10" 
                         Height="30"
                         Padding="5"/>

                <TextBlock Text="Пароль:" Margin="5,0"/>
                <PasswordBox x:Name="PasswordBox" 
                             Margin="5,0,5,10" 
                             Height="30"
                             Padding="5"/>

                <TextBlock Text="Подтвердите пароль:" Margin="5,0"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                             Margin="5,0,5,20" 
                             Height="30"
                             Padding="5"/>

                <Button x:Name="RegisterButton" 
                        Content="Зарегистрироваться" 
                        Height="35" 
                        Background="#000000" 
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="RegisterButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#ffa500"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#000000"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
        <Image Margin="0,-10,329,279" Source="/Новый проект.png" Stretch="Fill"/>
    </Grid>
</Window>